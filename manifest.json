{
    "manifest_version": 3,
    "name": "Jump to Sheet",
    "version": "1.0",
    "description": "Enter a code to navigate to a specified webpage.",
    "permissions": [
        "activeTab",
        "storage"
    ],
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "icon16.png",
            "48": "icon48.png",
            "128": "icon128.png"
        }
    },
    "web_accessible_resources": [
        {
            "resources": [
                "help.html"
            ],
            "matches": [
                "<all_urls>"
            ]
        }
    ],
    "content_scripts": [
        {
            "matches": [
                "https://acc.autodesk.com/build/sheets/projects/*"
            ],
            "js": [
                "content.js"
            ],
            "css": [
                "styles.css"
            ]
        }
    ]
}